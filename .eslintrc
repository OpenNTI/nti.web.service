{
	"extends": "./node_modules/@nti/lib-scripts/config/eslintrc.js",

	"parserOptions": {
		"sourceType": "script",
		"ecmaFeatures": {
			"impliedStrict": false
		}
	},

	"globals": {
		"fetch": true
	},

	"rules": {
		"strict": ["error", "global"],
		"import/no-commonjs": 0,
		"import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/test/*.js", "**/*.spec.js"]}],
		"no-restricted-globals": 0
	}
}
