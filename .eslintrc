{
	"extends": "@nti/eslint-config-lib-scripts",
	"parser": "espree",
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "script",
		"ecmaFeatures": {
			"impliedStrict": false
		}
	},
	"globals": {
		"fetch": true,
		"self": "off"
	},
	"rules": {
		"strict": [
			"error",
			"global"
		],
		"import/no-commonjs": 0,
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": false,
				"bundledDependencies": true
			}
		],
		"no-restricted-globals": 0
	}
}
